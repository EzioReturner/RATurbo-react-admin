{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@views/*": ["src/views/*"],
      "@style/*": ["src/style/*"],
      "@utlis/*": ["src/utlis/*"],
      "@components/*": ["src/components/*"],
      "@store/*":["src/store/*"]
    }
  },
  "include": [
    "src",
    "src/*"
  ]
}
